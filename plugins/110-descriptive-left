#!/usr/bin/env bash
# Side: descriptive LEFT â€” with "last" for final weekday of month
set -euo pipefail

OUT="${WAYBAR_OUTPUT_NAME:-$(/usr/bin/seasoning which-output)}"
CACHE="${SEASONING_CACHE:-$HOME/.cache/seasoning}"
ID="$(basename "$0")"                       # 110-descriptive-left
MODE_FILE="$CACHE/$OUT/mode.$ID.state"

# --- mode (0..2) ---
mode=0
if [[ -r "$MODE_FILE" ]]; then
  read -r m <"$MODE_FILE" || true
  [[ "$m" =~ ^[0-9]+$ ]] && mode=$((m%3))
fi

# --- fetch all date info in minimal calls for performance ---
read -r dow_full h d m_now md < <(date '+%A %H %-d %m %m-%d')
dow="${dow_full,,}"  # lowercase using bash parameter expansion
m_next="$(date -d '+7 days' '+%m')"

# --- helpers (using pre-fetched values) ---
tod_bucket(){
  local h="$1"
  case "$h" in
    0| 1| 2| 3| 4| 5) echo night;;
    6| 7| 8| 9|10|11) echo morning;;
   12|13|14|15|16|17) echo afternoon;;
                   *) echo evening;;
  esac;
}
nth_weekday(){ local d="$1"; echo $(( (d-1)/7 + 1 )); }  # 1..5
is_last_weekday_of_month(){
  local m_now="$1" m_next="$2"
  [[ "$m_now" != "$m_next" ]]
}
ordinal_numeric(){
  n=$1;
  case $((n%100)) in
    11|12|13) s="th";;
    *) case $((n%10)) in
      1)s="st";;
      2)s="nd";;
      3)s="rd";;
      *)s="th";;
    esac ;;
  esac
  printf "%d%s" "$n" "$s"; 
}

ordinal_word_nth(){
  local n="$1" m_now="$2" m_next="$3"
  if is_last_weekday_of_month "$m_now" "$m_next"; then
    printf "last"
  else
    case "$n" in
      1) printf "first";;
      2) printf "second";;
      3) printf "third";;
      4) printf "fourth";;
      5) printf "fifth";;
      *) printf "%s" "$(ordinal_numeric "$n")";;
    esac
  fi
}

BANG=''
case "$md" in 02-29) BANG='!';; esac

# --- render (using pre-fetched values) ---
tod="$(tod_bucket "$h")"
nth="$(nth_weekday "$d")"

case "$mode" in
  0) printf "%s %s%s\n" "$dow" "$tod" "$BANG" ;;
  1) printf "%s %s %s%s\n" "$(ordinal_numeric "$nth")" "$dow" "$tod" "$BANG" ;;
  2) printf "%s %s %s%s\n" "$(ordinal_word_nth "$nth" "$m_now" "$m_next")" "$dow" "$tod" "$BANG" ;;
esac
